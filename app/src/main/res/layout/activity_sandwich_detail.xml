<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/description_view1"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:backgroundTint="#955E0C"
        app:title="Pizzeria"
        app:menu="@menu/activity_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/sandwich_picture"
            android:layout_width="230dp"
            android:layout_height="230dp"
            />

        <TextView
            android:id="@+id/sandwich_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textColor="#955E0C"
            android:textStyle="bold"
            android:fontFamily="@font/dancing_script_medium"
            />

        <TextView
            android:id="@+id/sandwich_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="@font/dancing_script_medium"
            />

        <TextView
            android:id="@+id/sandwich_price"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#6aab73"
            android:textAlignment="textStart"
            android:fontFamily="@font/dancing_script_medium"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_order"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Buy Sandwich"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:clickable="true"
            android:fontFamily="@font/dancing_script_medium"
            android:backgroundTint="#955E0C"
            app:cornerRadius="12dp"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>